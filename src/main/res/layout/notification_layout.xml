<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/notification_container"
              android:gravity="center"
              android:background="@color/notification_color"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/notification_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="120dp"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/notification_title"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:layout_weight="3"
            android:textSize="@dimen/notification_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Title"/>
        <TextView
            android:id="@+id/notification_artist"
            android:singleLine="true"
            android:layout_weight="2"
            android:textSize="@dimen/notification_artist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="artist"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/notification_previous"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/widget_previous_normal"
            android:background="?android:selectableItemBackgroundBorderless"/>
        <ImageView
            android:id="@+id/notification_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/widget_play_normal"
            android:background="?android:selectableItemBackgroundBorderless"/>
        <ImageView
            android:id="@+id/notification_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/widget_next_normal"
            android:background="?android:selectableItemBackgroundBorderless"/>

    </LinearLayout>

</LinearLayout>